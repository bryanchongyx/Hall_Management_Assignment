



import java.util.Date;

public class Booking {
        private User user;
    private Hall hall;
    private Date bookingDate;
    private boolean isPaid;
    private boolean isCancelled;

    public Booking(User user, Hall hall, Date bookingDate) {
        this.user = user;
        this.hall = hall;
        this.bookingDate = bookingDate;
        this.isPaid = false;
        this.isCancelled = false;
    }

    public void makePayment() {
        this.isPaid = true;
    }

    public boolean canBeCancelled() {
        Date today = new Date();
        long diff = bookingDate.getTime() - today.getTime();
        return diff >= 3 * 24 * 60 * 60 * 1000L; // 3 days in milliseconds
    }

    public void cancelBooking() {
        if (canBeCancelled()) {
            this.isCancelled = true;
        } else {
            throw new IllegalStateException("Booking cannot be cancelled within 3 days of the booking date.");
        }
    }

    // Getters and setters
}


